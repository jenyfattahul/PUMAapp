<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Image of About -->
        <ImageView
            android:id="@+id/imageViewAbout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/puma"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            />

        <!-- Description Text -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The President University Major Association (PUMA) Information Systems is a student-led organization dedicated to fostering collaboration, innovation, and academic excellence within the Information Systems program. It organizes events, workshops, and networking opportunities to enhance studentsâ€™ knowledge, skills, and career readiness in the field of technology and systems management."
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:elevation="6dp"
            android:justificationMode="inter_word" />

        <!-- Instagram Button with Custom Background -->
        <Button
            android:id="@+id/buttonInstagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us on Instagram"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6A1B9A"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- TikTok Button with Custom Background -->
        <Button
            android:id="@+id/buttonTikTok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us on TikTok"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6A1B9A"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- LinkedIn Button with Custom Background -->
        <Button
            android:id="@+id/buttonLinkedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us on LinkedIn"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6A1B9A"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>

</ScrollView>
